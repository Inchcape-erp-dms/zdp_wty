<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>pwaCreateDialogTitle}" contentWidth="30rem" >
        <content>
            <Text text="{i18n>pwaCreateDialogConfirmMsg}" class="sapUiSmallMarginBottom" />
        </content>
        <buttons>
            <Button text="{i18n>confirm}" type="Transparent" press="onPwaCreateDialogConfirm"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>