<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>createFromPWADialogTitle}" contentWidth="35rem">
        <content>
            <VBox fitContainer="true">
                <items>
                    <Text text="{createFromPWADialogConfirmMsg}" class="sapUiSmallMarginBottom" />
                    <Select id="claimTypeSelect" selectedKey="{PWACategory}" enabled="false" />
                </items>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>confirm}" type="Transparent" press="onClaimCreateSelect"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>