<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>changeItemQtyDialogTitle}" contentWidth="30rem" contentHeight="8rem">
        <content>
            <Text text="{i18n>changeItemQtyDialogConfirmMsg} {Material}?" class="sapUiSmallMarginBottom" />
            <FlexBox alignItems="Start" justifyContent="Center">
                <items>
                    <Input id="newQty" type="Number" value="{path:'Qty',formatter:'.formatter.Number'}" liveChange="onQtyLiveChange" class="itemQtyChange"/>
                </items>
            </FlexBox>
        </content>
        <buttons>
            <Button id="confirmButton" text="{i18n>confirm}" type="Transparent" press="onQtyDialogConfirm"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
