<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>changeItemHoursDialogTitle}" contentWidth="30rem" contentHeight="6rem">
        <content>
            <Text text="{i18n>changeItemHoursDialogConfirmMsg} {Material}?" class="sapUiSmallMarginBottom" />
            <FlexBox alignItems="Start" justifyContent="Center">
                <items>
                    <Input id="newHours" type="Number" value="{path:'Qty',formatter:'.HoursNew'}" liveChange="onQtyLiveChange" class="itemQtyChange" />
                    <!-- <TimePicker id="newHours" value="{path:'Qty',formatter:'.Hours'}" valueFormat="HH:mm" displayFormat="HH:mm" placeholder="Enter hours" /> -->
                </items>
            </FlexBox>
        </content>
        <buttons>
            <Button id="confirmButton" text="{i18n>confirm}" type="Transparent" press="onHoursDialogConfirm"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>