<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>addSerialNumber}" contentWidth="30rem" >
        <content>
            <FlexBox justifyContent="Center">
            <Input  id="idSerialNumber"
                    placeholder="{i18n>wtyPlaceHolderSerial}"
                    value="{SerNumber}"
                    type="Text"
                    editable="true"
                    maxLength="40"
                    width="225px"
                    liveChange="liveCheckSerialNumber"
	                valueState="{viewModel>/serialValueState}"
	                valueStateText="{viewModel>/serialValueStateText}"/>
            </FlexBox>
        </content>
        <buttons>
            <Button text="{i18n>confirm}" type="Transparent" press="onSerialConfirm" enabled="{viewModel>/serConfEnabl}"></Button>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>