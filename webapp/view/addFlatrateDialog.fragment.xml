<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="{i18n>addWtyFRItemDialogTitle}" contentWidth="35rem">
        <content>
            <VBox fitContainer="true">
                <items>
                    <Text text="{i18n>addWtyFRItemDialogTitle}?" class="sapUiSmallMarginBottom" />
                    <SearchField search="onAddLabourSearch" tooltip="{i18n>partsEnquiryMasterSearchTooltip}" width='100%' />
                    <List id="addLabourList" mode="SingleSelectMaster" select="onFlatRateSelect" growing="true" growingScrollToLoad="true" updateFinished="onFlatRateSelect" />
                </items>
            </VBox>
        </content>
        <buttons>
            <Button text="{i18n>cancel}" type="Transparent" press="onDialogCancel"></Button>
        </buttons>
    </Dialog>
</core:FragmentDefinition>